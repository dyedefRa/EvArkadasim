@page
@using EvArkadasim.Localization
@using Microsoft.Extensions.Localization
@model EvArkadasim.Web.Pages.Account.RegisterModel
@inject IStringLocalizer<EvArkadasimResource> L
@{
    Layout = "~/Pages/Shared/_Layout.cshtml";
    var navigationModel = new EvArkadasim.Web.Models.NavigationModel() { BasePageName = "Home", BasePageLink = "/Home", CurrentPageName = "Register" };
}

<!-- NAVIGATION START -->

<partial name="~/Pages/Admin/Shared/_Navigation.cshtml" model="navigationModel" />

<!-- NAVIGATION END -->

<div class="container" style="margin-top:50px; margin-bottom:100px;">
    <form method="post" href="/Account/Register">
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(false, "", new { @class = "text-danger",style="font-size:15px;" })
        <div class="row">
            <div class="form-group col-md-6 col-lg-6 col-xl-6">
                <abp-input asp-for="UserRegisterInputModel.Name" class="input-lg" label="@L["Name"]" />
            </div>
            <div class="form-group col-md-6 col-lg-6 col-xl-6">
                <abp-input asp-for="UserRegisterInputModel.Surname" class="input-lg" label="@L["Surname"]" />
            </div>
        </div>
        <div class="row">
            <div class="form-group col-md-6 col-lg-6 col-xl-6">
                <abp-input asp-for="UserRegisterInputModel.UserName" class="input-lg" label="@L["UserName"]" />
            </div>
            <div class="form-group col-md-6 col-lg-6 col-xl-6">
                <abp-input asp-for="UserRegisterInputModel.Email" class="input-lg" label="@L["Email"]" />
            </div>
        </div>
        <div class="row">
            <div class="form-group col-md-6 col-lg-6 col-xl-6">
                <abp-input asp-for="UserRegisterInputModel.Password" class="input-lg" label="@L["Password"]" />
            </div>
            <div class="form-group col-md-6 col-lg-6 col-xl-6">
                <abp-input asp-for="UserRegisterInputModel.ConfirmPassword" class="input-lg" label="@L["ConfirmPassword"]" />
            </div>
        </div>
        <div class="row">
            <div class="form-group col-md-6 col-lg-6 col-xl-6">
                <abp-input asp-for="UserRegisterInputModel.PhoneNumber" class="mobilephone input-lg" placeholder="0(5__) ___-____" label="@L["PhoneNumber"]" />
            </div>
            <div class="form-group col-md-6 col-lg-6 col-xl-6">
                <abp-select asp-for="UserRegisterInputModel.Gender" class="input-lg" label="@L["Gender"]">
                    <option disabled selected>@L["Choose"]</option>
                </abp-select>
            </div>
        </div>
        <div class="row" style="margin-top:40px;">
            <div class="text-center col-12 col-sm-12 col-md-12 col-lg-12 mt-2">
                <abp-button text="@L["Register"]" type="submit" class="btn-nice" button-type="Primary" />
                <p style="margin-top:20px;">
                    <a href="/Account/Login">@L["LoginInstead"]</a>
                </p>
            </div>
        </div>
    </form>
</div>
